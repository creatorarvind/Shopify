<div class="cart__drawer right-to-left-open">
  <div class="cart__drawer-section">
    <div class="cart__drawer-top">
      <div class="cart__drawer-heading">
        <div class="heading-text text-center">
          <h2 class="top-text">Your Basket</h2>
          <span class="cross">X</span>
        </div>
      </div>
    </div>
    <div class="cart__drawer-center">
      <div class="cart__drawer-item grid--uniform">
        {% for item in cart.items %}
        <div class="cart_items">
          <div class="cart__items grid__item medium-up--one-third">
            <div class="item__image">
              <a href="{{ item.url }}">
              	<img src="{{ item.image | img_url: '100x100' }}">
              </a>
            </div>
          </div>
          <div class="cart__items grid__item medium-up--one-third">
            <div class="cart_items-title">
              <a href="{{ item.url }}">
                <p class="item__title">
                  <strong>{{ item.product.title }}</strong>
                </p>
              </a>
            </div>
            <div class="qtySelector">
              <button type="button" id="m-btn" class="minus" value="-" data-line="{{ forloop.index }}">-</button>
              <input type="text" name="updates[]" id="updates_{{ forloop.index }}" class="item-qty" pattern="[0-9]*" data-line="{{ forloop.index }}" min="0" value="{{ item.quantity }}">
              <button type="button" id="p-btn" class="plus" value="+" data-line="{{ forloop.index }}">+</button>
            </div>
          </div>
          <div class="cart__items grid__item medium-up--one-third">
            <div class="remove__item">
              <a href="/cart/change?line={{forloop.index}}&amp;quantity=0" class="cart__remove">X</a>
            </div>
            <div class="cart__item-price" data-price="{{item.product.price}}">
              <strong>{{ item.final_price | money }}</strong>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    <div class="cart__drawer-bottom page-width">
      <span class="subtotal_text">{{ 'cart.general.subtotal' | t }}</span>
      <span class="subtotal_price">{{ cart.total_price | money }}</span>
    </div>
  </div>
</div>
